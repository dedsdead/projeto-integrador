<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.trabalhofinal.controllers.TelaEnderecos">
    <Label fx:id="lbCep" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="91.0" text="Cep:" />
    <TextField fx:id="tfCep" promptText="Digite o cep" />
    <Label fx:id="lbEstado" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="91.0" text="Estado:" />
    <TextField fx:id="tfEstado" promptText="Digite o estado" />
    <Label fx:id="lbCidade" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="92.0" text="Cidade:" />
    <TextField fx:id="tfCidade" promptText="Digite a cidade" />
    <Label fx:id="lbBairro" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="92.0" text="Bairro:" />
    <TextField fx:id="tfBairro" promptText="Digite o bairro" />
    <Label fx:id="lbLogradouro" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="91.0" text="Logradouro:" />
    <TextField fx:id="tfLogradouro" promptText="Digite o logradouro" />
    <Label fx:id="lbNumero" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="91.0" text="Numero:" />
    <TextField fx:id="tfNumero" promptText="Digite o numero" />
    <Label fx:id="lbComplemento" alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="91.0" text="Complemento:" />
    <TextField fx:id="tfComplemento" promptText="Digite o complemento" />
    <HBox spacing="10.0">
        <Button fx:id="btBuscarCEP" onAction="#buscarCep" text="Buscar CEP" />
        <Button fx:id="btSalvarEndereco" onAction="#salvarEndereco" text="Salvar" />
        <Button fx:id="btSair" onAction="#sair" text="Sair" />
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </HBox>
    
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
